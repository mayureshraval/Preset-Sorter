{
  "name": "preset-sorter-pro",
  "productName": "Preset Sorter Pro",
  "version": "1.1.0",
  "description": "Professional preset sorting tool",
  "author": "Mayuresh Rawal",

  "main": "main.js",

  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },

  "build": {
    "appId": "com.mayuresh.presetsorter",
    "productName": "Preset Sorter Pro",

    "asar": true,
    "compression": "maximum",

    "files": [
      "main.js",
      "preload.js",
      "sorter.js",
      "intelligence.js",
      "sample-sorter.js",
      "renderer.js",
      "index.html",
      "about.html",
      "keywords.json",
      "sample-keywords.json",
      "config.json",
      "assets/**/*",
      "package.json",
      "!node_modules/**/*",
      "!**/*.map",
      "!**/*.md",
      "!**/*.txt",
      "!**/*.ts",
      "!**/*.d.ts",
      "!**/LICENSE",
      "!**/CHANGELOG*",
      "!**/README*",
      "!dist/**",
      "!out/**",
      "!release/**",
      "!.git/**",
      "!scan-worker.js"
    ],

    "win": {
      "icon": "assets/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ]
    },

    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },

    "electronLanguages": ["en-US"],

    "directories": {
      "output": "release"
    }
  },

  "devDependencies": {
    "electron": "^28.3.3",
    "electron-builder": "^24.13.3"
  }
}
